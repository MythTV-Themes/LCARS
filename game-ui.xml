<mythuitheme>
    
    <window name="gameui">
        
        <imagetype name="background">
            <filename>background.png</filename>
            <area>0,0,1280,720</area>
        </imagetype>
        
        <textarea name="pagetitle" from="basetextarea">
            <area>20,15,130,100</area>
            <value>Play Games</value>
	    <multiline>yes</multiline>
            <align>allcenter</align>
            <font>baselargeblack</font>
        </textarea>
        
        <buttontree name="gametreelist">
            <area>170,295,1095,410</area>
            <numlists>3</numlists>
            <spacing>10</spacing>
            <buttonlist name="listtemplate" from="basebuttonlist" />
        </buttontree>
        
        <textarea name="title" from="basetextarea">
            <area>170,15,720,50</area>
            <font>baseextralarge</font>
        </textarea>
        
        <textarea name="system" from="basetextarea">
            <area>170,70,720,30</area>
            <template>System: %1</template>
            <font>basesmall</font>
        </textarea>
        
        <textarea name="year" from="system">
            <position>170,100</position>
            <template>Year: %1</template>
        </textarea>
        
        <textarea name="genre" from="system">
            <position>170,130</position>
            <template>Genre: %1</template>
        </textarea>
        
        <textarea name="favoritelabel" from="system">
            <position>170,160</position>
            <value>Favorite:</value>
        </textarea>
        
        <statetype name="favorite">
            <state name="no">
                <textarea name="favorite" from="basetextarea">
                    <area>236,160,580,35</area>
                    <value>No</value>
                </textarea>
            </state>
            <state name="yes" from="no">
                <textarea name="favorite">
                    <value>Yes</value>
                </textarea>
            </state>
        </statetype>
        
        <textarea name="description" from="system">
            <position>170,190</position>
            <template>Description: %1</template>
        </textarea>
        
        <imagetype name="coverart">
            <area>610,15,180,150</area>
            <preserveaspect>true</preserveaspect>
        </imagetype>
        
        <imagetype name="screenshot">
            <area>880,15,300,196</area>
        </imagetype>
        
        <clock name="date">
            <area>15,615,140,50</area> 
	    <font>basesmallblack</font>
	    <cutdown>no</cutdown>
	    <format>dddd\nMMMM dd, yyyy</format>
	    <align>allcenter</align>
        </clock>
        
        <clock name="time">
            <area>15,670,140,25</area>
            <font>basesmallblack</font>
            <align>center</align>
            <secondflash>yes</secondflash>
            <format>%TIME%</format>
        </clock>
        
    </window>
    
