<mythuitheme>
    
    <window name="moviesui">
        
        <imagetype name="background">
            <filename>LCARSMenusbg.png</filename>
            <area>0,0,1280,720</area>
        </imagetype>
        
        <textarea name="windowtitle" from="basetextarea">
            <area>59,38,129,174</area>
            <font>baselargeblack</font>
            <align>top,hcenter</align>
            <multiline>yes</multiline>
            <value>Movie Times</value>
        </textarea>
        
        <buttontree name="movietreelist">
            <area>210,250,1027,430</area>
            <numlists>3</numlists>
            <spacing>10</spacing>
            <buttonlist name="listtemplate" from="basebuttonlist" />
        </buttontree>
        
        <textarea name="theatername" from="basetextarea">
            <area>210,40,1027,45</area>
            <font>baselarge</font>
            <align>allcenter</align>
            <multiline>no</multiline>
            <value>Theater name</value>
        </textarea>
        
        <textarea name="movietitle" from="basetextarea">
            <area>210,85,1027,45</area>
            <font>baselarge</font>
            <align>allcenter</align>
            <multiline>no</multiline>
        </textarea>
        
        <textarea name="ratingvalue" from="basetextarea">
            <area>210,130,1027,30</area>
            <font>basemedium</font>
            <align>allcenter</align>
            <template>Rating: %1</template>
        </textarea>
        
        <textarea name="runningtimevalue" from="ratingvalue">
            <area>210,160,1027,30</area>
            <template>Running Time: %1</template>
        </textarea>
        
        <textarea name="showtimesvalue" from="ratingvalue">
            <area>210,190,1027,30</area>
            <template>Show Times: %1</template>
        </textarea>
        
        <clock name="date">
            <area>59,595,129,50</area> 
	    <font>basesmallblack</font>
	    <cutdown>no</cutdown>
	    <format>dddd\nMMMM dd, yyyy</format>
	    <align>allcenter</align>
        </clock>
        
        <clock name="time">
            <area>59,650,129,25</area>
            <font>basesmallblack</font>
            <align>center</align>
            <secondflash>yes</secondflash>
            <format>%TIME%</format>
        </clock>
        
    </window>
    
</mythuitheme>
